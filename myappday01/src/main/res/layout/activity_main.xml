<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/mydl"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/myll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<android.support.v7.widget.Toolbar
    android:id="@+id/mytoolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary">
    <TextView
        android:id="@+id/mytvtoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="户外花朵识别系统"/>
</android.support.v7.widget.Toolbar>
<!--<android.support.v7.widget.RecyclerView
    android:id="@+id/myrecy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>-->
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="#e300f3"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="植 物"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小知识"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:background="#f3008a">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点位1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点位2"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_margin="30dp"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#c3bdc0"
                app:cardCornerRadius="15dp"
                >

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="101dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="30dp"
                app:cardBackgroundColor="#c3bdc0"
                app:cardCornerRadius="15dp"
                >
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/mynv"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        app:headerLayout="@layout/nv_head"
        app:menu="@menu/nv_menu"
        android:layout_height="match_parent"/>
</android.support.v4.widget.DrawerLayout>